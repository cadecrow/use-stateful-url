{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "jsx": "react-jsx"
  },
  "include": [
    "src/useStatefulUrl.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "bun-tests",
    "browser-window-dom-tests", 
    "scripts",
    "docs",
    "**/*.test.ts"
  ]
} 